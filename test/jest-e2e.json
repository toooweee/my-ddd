{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/ddd": "<rootDir>/../libs/ddd/src",
    "@app/ddd/(.*)": "<rootDir>/../libs/ddd/src/$1",
    "@app/libs": "<rootDir>/../libs/libs/src",
    "@app/libs/(.*)": "<rootDir>/../libs/libs/src/$1"
  }
}